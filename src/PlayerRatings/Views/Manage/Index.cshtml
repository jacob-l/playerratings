@using PlayerRatings.Localization
@model IndexViewModel
@{
    ViewData["Title"] = LocString[nameof(LocalizationKey.ManageYourAccount)];
}

<h2>@ViewData["Title"].</h2>
<p class="text-success">@ViewData["StatusMessage"]</p>
<div>
    <h2>@LocString[nameof(LocalizationKey.ChangeYourAccountSettings)]</h2>
    <hr />
    <dl class="dl-horizontal">
        <dt>@LocString[nameof(LocalizationKey.Password)]:</dt>
        <dd>
            [
            @if (Model.HasPassword)
            {
                <a asp-controller="Manage" asp-action="ChangePassword">@LocString[nameof(LocalizationKey.Edit)]</a>
            }
            else
            {
                <a asp-controller="Manage" asp-action="SetPassword">@LocString[nameof(LocalizationKey.Create)]</a>
            }
            ]
        </dd>
        <dt>@LocString[nameof(LocalizationKey.ExternalLogins)]:</dt>
        <dd>

            @Model.Logins.Count [<a asp-controller="Manage" asp-action="ManageLogins">@LocString[nameof(LocalizationKey.Manage)]</a>]
        </dd>

