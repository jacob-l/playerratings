@using PlayerRatings.Localization
@model PlayerRatings.Models.Invite

@{
    ViewData["Title"] = LocString[nameof(LocalizationKey.Delete)];
}

<h2>@ViewData["Title"]</h2>

<h3>@LocString[nameof(LocalizationKey.AreYouSureDelete)]?</h3>
<div>
    <h2>@LocString[nameof(LocalizationKey.Invite)]</h2>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @LocString[nameof(LocalizationKey.Email)]
        </dt>
        <dd>
            @Html.DisplayFor(model => model.CreatedUser.Email)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <div class="form-actions no-color">
            <input type="submit" value="@LocString[nameof(LocalizationKey.Delete)]" class="btn btn-default" /> |
            <a asp-action="Index">@LocString[nameof(LocalizationKey.BackToList)]</a>
        </div>
    </form>
</div>
