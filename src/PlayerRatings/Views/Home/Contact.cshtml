@using PlayerRatings.Localization

@model PlayerRatings.ViewModels.Home.ContactViewModel

@{
    ViewData["Title"] = LocString[nameof(LocalizationKey.Support)];
}

<form method="post" asp-antiforgery="true">
    <div class="form-horizontal">
        <h4>@LocString[nameof(LocalizationKey.Support)]</h4>
        <hr />
        <div>
            @ViewData["Message"]
        </div>
        <div asp-validation-summary="ValidationSummary.All" class="text-danger"></div>
        <div class="form-group">
            <div class="col-md-12">
                <label asp-for="ClientContact" class="control-label">@LocString[nameof(LocalizationKey.YourContactDetails)]</label>
                <input asp-for="ClientContact" class="form-control" />
                <span asp-validation-for="ClientContact" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-12">
                <label asp-for="Message" class="control-label">@LocString[nameof(LocalizationKey.Message)]</label>
                <textarea asp-for="Message" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Message" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-12">
                <button type="submit" class="btn btn-default">
                    @LocString[nameof(LocalizationKey.Submit)]
                </button>
            </div>
        </div>
    </div>
</form>